<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrar_mascota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondozungu"
    tools:context="init_code.hyperion.zunguveterinarios.Registrar_mascota">

    <!--Comienza el contenedor padre-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <!--Comienza contenedor del header-->
        <LinearLayout
            android:background="@color/blanco"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.60"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/logo_zungu"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:background="@color/verde_zungu"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.80"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/mascotas"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mascotas"
                    android:gravity="center"
                    android:textColor="@color/blanco"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:gravity="center"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <!--Termina contenedor del header-->


        <!--Contenido Hijo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.90"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/gris_fuerte"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:textSize="15dp"
                    android:text="REGISTRAR MASCOTA"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".90"
                android:background="@color/verde_zungu"
                android:layout_height="1dp"></LinearLayout>
        </LinearLayout>
        <!--Termina Separador-->

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:background="@color/obscuro"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="30dp">
            <TextView
                android:layout_width="match_parent"
                android:text="¿Tienes un código?"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.30"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/subir_imagen"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.70"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:hint="Nombre"
                                android:layout_height="40dp"
                                android:textColor="@color/blanco"
                                android:background="@color/verde_zungu"
                                android:inputType="text"
                                android:textSize="12dp"
                                android:paddingLeft="10dp"
                                android:id="@+id/txtNombre" />

                            <EditText
                                android:layout_width="match_parent"
                                android:hint="Fecha de nacimiento"
                                android:layout_marginTop="2dp"
                                android:layout_height="40dp"
                                android:textColor="@color/blanco"
                                android:background="@color/verde_zungu"
                                android:inputType="text"
                                android:textSize="12dp"
                                android:paddingLeft="10dp"
                                android:id="@+id/txtFechaNacimiento" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_below="@+id/inputdoble"
                        android:id="@+id/comp_input"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Especie"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:background="@color/fondo_input"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:id="@+id/txtEspecie" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_height="40dp">

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Raza"
                            android:textSize="12dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:background="@color/fondo_input"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:id="@+id/txtRaza" />

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Peso"
                            android:textSize="12dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:background="@color/fondo_input"
                            android:inputType="number"
                            android:layout_marginLeft="2dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/txtPeso" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_height="40dp">

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Color"
                            android:textSize="12dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:background="@color/fondo_input"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:id="@+id/txtColor" />

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Heats"
                            android:textSize="12dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:background="@color/fondo_input"
                            android:inputType="number"
                            android:layout_marginLeft="2dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/txtHeats" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:gravity="center"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.90"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="fill_parent"
                                android:weightSum="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <RadioButton android:id="@+id/radio_pirates"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.40"
                                    android:layout_height="wrap_content"
                                    android:text="Macho"
                                    android:onClick=""/>
                                <RadioButton android:id="@+id/radio_ninjas"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.40"
                                    android:layout_height="wrap_content"
                                    android:text="Hembra"
                                    android:onClick=""/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Señas particulares"
                            android:layout_height="40dp"
                            android:textSize="12dp"
                            android:layout_weight="1"
                            android:background="@color/fondo_input"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:id="@+id/txtSeniasParticulares" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Asignar cliente"
                            android:layout_height="40dp"
                            android:textSize="12dp"
                            android:layout_weight="1"
                            android:background="@color/fondo_input"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_below="@+id/datos"
                        android:id="@+id/input_doble"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_height="40dp">

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Veterinario"
                            android:textSize="12dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:background="@color/fondo_input"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            />

                        <EditText
                            android:layout_width="0dp"
                            android:hint="Cédula (Opcional)"
                            android:textSize="12dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:background="@color/fondo_input"
                            android:inputType="number"
                            android:layout_marginLeft="2dp"
                            android:paddingLeft="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.90"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/gris_fuerte"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"
                                android:textSize="15dp"
                                android:text="Opcional"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".90"
                            android:background="@color/verde_zungu"
                            android:layout_height="1dp"></LinearLayout>
                    </LinearLayout>
                    <!--Termina Separador-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.90"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Registrar dueño sin cuenta en Zungu:"
                                android:layout_width="wrap_content"
                                android:textSize="12dp"
                                android:textColor="@color/obscuro"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.90"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Nombre:"
                                    android:textSize="12dp"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/obscuro"
                                    android:layout_height="match_parent" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:drawableLeft="@drawable/cedulaico"
                                    android:layout_height="30dp"
                                    android:textColor="@color/blanco"
                                    android:background="@drawable/border_negro_radius"
                                    android:inputType="text"
                                    android:textSize="12dp"
                                    android:paddingLeft="10dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.30"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:src="@drawable/subir_imagen"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.70"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:text="Correo electrónico:"
                                            android:textSize="12dp"
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/obscuro"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:drawableLeft="@drawable/emailico"
                                        android:layout_height="30dp"
                                        android:textColor="@color/blanco"
                                        android:background="@drawable/border_negro_radius"
                                        android:inputType="text"
                                        android:textSize="12dp"
                                        android:paddingLeft="10dp"
                                        />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:text="Móvil:"
                                            android:textSize="12dp"
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/obscuro"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:drawableLeft="@drawable/celico"
                                        android:layout_marginTop="5dp"
                                        android:layout_height="30dp"
                                        android:textColor="@color/blanco"
                                        android:background="@drawable/border_negro_radius"
                                        android:inputType="text"
                                        android:textSize="12dp"
                                        android:paddingLeft="10dp"
                                        />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:id="@+id/botonagregar"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.30"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_width="match_parent"
                                android:text="Registrar"
                                android:textAllCaps="false"
                                android:textSize="12dp"
                                android:paddingLeft="10dp"
                                android:textColor="@color/obscuro"
                                android:background="@drawable/border_verde_radius"
                                android:layout_height="30dp"
                                android:id="@+id/btnRegistrar"
                                android:onClick="registrarMascota" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.10"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.30"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_width="match_parent"
                                android:text="Cancelar"
                                android:textAllCaps="false"
                                android:textSize="12dp"
                                android:paddingLeft="10dp"
                                android:textColor="@color/obscuro"
                                android:background="@drawable/border_verde_radius"
                                android:layout_height="30dp" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <!--Termina Contenido Hijo-->
    </LinearLayout>

    <!--Termina contenedor padre-->


</RelativeLayout>
