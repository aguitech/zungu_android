<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cuenta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondozungu"
    tools:context="init_code.hyperion.zunguveterinarios.Cuenta">

    <!--Comienza el contenedor padre-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/header"
        android:layout_height="wrap_content">

        <!--Comienza contenedor del header-->
        <LinearLayout
            android:background="@color/blanco"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.60"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/logo_zungu"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:background="@color/verde_zungu"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.80"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/configuracion"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mi cuenta Zungu"
                    android:gravity="center"
                    android:textColor="@color/blanco"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:gravity="center"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <!--Termina contenedor del header-->

    </LinearLayout>
    <!--Termina contenedor padre-->

    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:background="@color/verde_zungu"
            android:textAllCaps="false"
            android:text="Suscripción"
            android:textColor="@color/blanco"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/derecha_"
            android:paddingRight="10dp"
            android:layout_height="30dp"
            android:id="@+id/btnSuscripcion"
            android:onClick="irSuscripcion" />

        <Button
            android:layout_width="match_parent"
            android:background="@color/verde_zungu"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:text="Cambiar contraseña"
            android:textColor="@color/blanco"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/derecha_"
            android:paddingRight="10dp"
            android:layout_height="30dp"
            android:id="@+id/btnCambiarContrasenia"
            android:onClick="irCambiarContrasenia" />

        <Button
            android:layout_width="match_parent"
            android:background="@color/verde_zungu"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:text="Eliminar cuenta"
            android:textColor="@color/blanco"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/derecha_"
            android:paddingRight="10dp"
            android:layout_height="30dp"
            android:id="@+id/btnEliminarCuenta"
            android:onClick="irEliminarCuenta" />

        <Button
            android:layout_width="match_parent"
            android:background="@color/verde_zungu"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:text="Politica de privacidad"
            android:textColor="@color/blanco"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/derecha_"
            android:paddingRight="10dp"
            android:layout_height="30dp"
            android:id="@+id/btnPoliticaPrivacidad"
            android:onClick="irPoliticaPrivacidad" />

        <Button
            android:layout_width="match_parent"
            android:background="@color/verde_zungu"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:text="Contarle a un amigo"
            android:textColor="@color/blanco"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/derecha_"
            android:paddingRight="10dp"
            android:layout_height="30dp"
            android:id="@+id/btnContarleAmigo"
            android:onClick="irContarleAmigo" />

    </LinearLayout>

</RelativeLayout>
