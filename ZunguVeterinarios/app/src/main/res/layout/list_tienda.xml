<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/border_gris"
        android:weightSum="1"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/producto"
                android:layout_height="match_parent" />
            <AbsoluteLayout
                android:layout_width="30dp"
                android:layout_alignParentBottom="true"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/editar_lapiz"
                    android:layout_height="match_parent" />
            </AbsoluteLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.70"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Nombre del producto"
                android:paddingTop="2dp"
                android:textStyle="bold"
                android:textColor="@color/gris_fuerte"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:text="Disponible: 25"
                android:textColor="@color/gris_fuerte"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:text="Precio: $300.00"
                android:textColor="@color/gris_fuerte"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:text="Xxxxxxxxxxxxxxxxxxxx"
                android:textColor="@color/gris_fuerte"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>