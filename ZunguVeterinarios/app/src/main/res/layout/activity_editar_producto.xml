<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="init_code.hyperion.zunguveterinarios.Editar_producto">

    <!--Comienza el contenedor padre-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <!--Comienza contenedor del header-->
        <LinearLayout
            android:background="@color/blanco"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.60"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/logo_zungu"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:background="@color/verde_zungu"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.80"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/inventario"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Inventario"
                    android:gravity="center"
                    android:textColor="@color/blanco"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:gravity="center"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <!--Termina contenedor del header-->

        <!--Comienza el contenido, se pondra Scroll para que las pantallas de adapten-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--Contenido Padre-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <!--Contenido Hijo-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.40"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <Button
                                android:layout_width="match_parent"
                                android:text="Activos"
                                android:textColor="@color/gris_fuerte"
                                android:textSize="12dp"
                                android:background="@drawable/tab_border_transparent_derecho"
                                android:textAllCaps="false"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.40"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <Button
                                android:layout_width="match_parent"
                                android:text="Agregar producto"
                                android:textColor="@color/blanco"
                                android:background="@drawable/tab_negro_derecho"
                                android:textAllCaps="false"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.90"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/gris_fuerte"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:text="Agregar producto"
                                android:layout_height="wrap_content" />
                            <!--Separador-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="3dp"
                                android:background="@color/verde_zungu"
                                android:layout_height="1dp">
                            </LinearLayout>
                            <!--Termina Separador-->
                        </LinearLayout>
                    </LinearLayout>
                    <!--aqui va el codigo de la foto-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.50"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/empty_image"
                                android:layout_width="match_parent"
                                android:layout_height="170dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.50"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/gris_fuerte"
                                android:textSize="18dp"
                                android:text="Subir imagen"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/gris_claro"
                                android:textSize="18dp"
                                android:text="Recomendado: 300x300px"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--Termina aqui va el codigo de la foto-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.90"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Nombre de producto:"
                                android:paddingBottom="2dp"
                                android:textColor="@color/obscuro"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:layout_width="match_parent"
                                android:background="@drawable/radius_negro"
                                android:layout_height="30dp"
                                android:id="@+id/txtNombreProducto" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Número de unidades:"
                                android:gravity="left"
                                android:paddingBottom="2dp"
                                android:textColor="@color/obscuro"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:layout_width="match_parent"
                                android:background="@drawable/radius_negro"
                                android:layout_height="30dp"
                                android:id="@+id/txtNumeroUnidades" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:layout_marginRight="10dp"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Precio (Compra):"
                                android:gravity="left"
                                android:paddingBottom="2dp"
                                android:textColor="@color/obscuro"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:layout_width="match_parent"
                                android:hint="$"
                                android:paddingLeft="10dp"
                                android:background="@drawable/radius_negro"
                                android:layout_height="30dp"
                                android:id="@+id/txtPrecioCompra" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:layout_marginLeft="10dp"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Precio (Venta):"
                                android:gravity="left"
                                android:paddingBottom="2dp"
                                android:textColor="@color/obscuro"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:layout_width="match_parent"
                                android:hint="$"
                                android:paddingLeft="10dp"
                                android:background="@drawable/radius_negro"
                                android:layout_height="30dp"
                                android:id="@+id/txtPrecioVenta" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.60"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Mostrar este producto en tienda:"
                                android:gravity="center"
                                android:paddingBottom="2dp"
                                android:textColor="@color/obscuro"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.30"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/checkBox" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.90"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Descripción:"
                                android:paddingBottom="2dp"
                                android:textColor="@color/obscuro"
                                android:layout_height="wrap_content"
                                />
                            <EditText
                                android:id="@+id/txtDescripcionProducto"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/radius_negro"
                                android:lines="5"
                                android:gravity="top|left"
                                android:inputType="textMultiLine" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.35"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_width="match_parent"
                                android:text="Agregar"
                                android:textColor="@color/gris_fuerte"
                                android:textAllCaps="false"
                                android:background="@drawable/border_verde_radius"
                                android:layout_height="30dp"
                                android:id="@+id/btnAgregarProducto"
                                android:onClick="editarProducto" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.35"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_width="match_parent"
                                android:text="Cancelar"
                                android:textColor="@color/gris_fuerte"
                                android:textAllCaps="false"
                                android:background="@drawable/border_verde_radius"
                                android:layout_height="30dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--Termina Contenido Hijo-->

                </LinearLayout>
                <!--Termina Contenido Padre-->

            </RelativeLayout>
        </ScrollView>
        <!--Termina el contenido-->

    </LinearLayout>
    <!--Termina contenedor padre-->

</RelativeLayout>
