<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_height="35dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtCosto"
                android:text="$00.00 "
                android:textColor="@color/gris_fuerte"
                android:textSize="12dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.40"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Servicio 1"
                android:id="@+id/txtNombre"
                android:textStyle="bold"
                android:textColor="@color/gris_fuerte"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/lapiz"
                android:id="@+id/imgEliminar"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:id="@+id/imgDetalle"
                android:src="@drawable/ojo"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/verde_zungu"
        android:layout_height="1dp">

    </LinearLayout>

</LinearLayout>